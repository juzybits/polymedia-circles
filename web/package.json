{
    "private": true,
    "name": "@polymedia/circles-web",
    "author": "@juzybits (https://polymedia.app)",
    "description": "https://circles.polymedia.app",
    "dependencies": {
        "@mysten/bcs": "latest",
        "@mysten/sui.js": "latest",
        "@mysten/wallet-kit": "latest",
        "@mysten/wallet-kit-core": "latest",
        "@polymedia/react-components": "latest",
        "@polymedia/webutils": "latest",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.16.0"
    },
    "devDependencies": {
        "@parcel/transformer-less": "latest",
        "@types/react": "^18.2.22",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.7.2",
        "@typescript-eslint/parser": "^6.7.2",
        "eslint": "^8.49.0",
        "eslint-plugin-deprecation": "^1.5.0",
        "events": "^3.3.0",
        "parcel": "latest",
        "prettier": "3.0.0",
        "process": "latest",
        "react-devtools": "latest"
    },
    "scripts": {
        "generate-sdk": "./sui-client-gen/generate-sdk.sh",
        "lint": "eslint ./src --ext .ts,.tsx",
        "serve": "rm -rf .parcel-cache/ dist/ && parcel src/index.html",
        "build": "rm -rf .parcel-cache/ dist/ && parcel build --no-source-maps src/index.html && cp src/static/* dist/",
        "deploy-dev": "pnpm build && wrangler pages publish dist/ --project-name polymedia-circles --branch dev",
        "deploy-prod": "pnpm build && wrangler pages publish dist/ --project-name polymedia-circles --branch main"
    },
    "alias": {
        "react": "./node_modules/react",
        "react-dom": "./node_modules/react-dom"
    }
}
